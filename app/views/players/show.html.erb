<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @player.name %>
</p>
<% @games = QueryController.getPlayerGames(@player) %>
<% stats = QueryController.getPlayerStats(@player) %>
<p>
  <b>Total:</b>
  <%= stats[:all] %>
  </br>
  <b>Won:</b>
  <%= stats[:won] %>
  </br>
  <b>Drawn:</b>
  <%= stats[:drawn] %>
  </br>
  <b>Lost:</b>
  <%= stats[:lost] %>
  </br>
</p>
<%= render 'games/list', :object => @games %>


<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
