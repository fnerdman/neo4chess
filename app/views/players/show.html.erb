<p id="notice"><%= notice %></p>

<% @games = @player.games %>
<% stats = @player.stats %>

<div class="row">
  <div class="span3">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Player Info</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Name</td>
          <td><%= @player.name %></td>
        </tr>
        <tr>
          <td>Total</td>
          <td><%= stats[:all] %></td>
        </tr>
        <tr>
          <td>Won</td>
          <td><%= stats[:won] %></td>
        </tr>
        <tr>
          <td>Drawn</td>
          <td><%= stats[:drawn] %></td>
        </tr>
        <tr>
          <td>Lost</td>
          <td><%= stats[:lost] %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="span9">
    <%= render 'games/list', :object => @games %>
  </div>
</div>