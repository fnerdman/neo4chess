<h1>Listing games</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Halfturns</th>
    <th>Result</th>
    <th>Date</th>
    <th>Mode</th>
    <th>Site</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.id %></td>
    <td><%= game.name %></td>
    <td><%= game.halfturns %></td>
    <td><%= game.result %></td>
    <td><%= game.date %></td>
    <td><%= game.mode %></td>
    <td><%= game.site %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

