<legend>Listing events</legend>
<% if @events.empty? %>
There were no events found.
  <% else %>
  <div class="span5 offset1">
    <table class="table table-hover well">
      <thead>
        <tr>
          <th>Name</th>
          <th>Site</th>
          <th>Date</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.site %></td>
            <td><%= event.date.strftime("%d.%m.%Y") %></td>
            <td><%= link_to 'Show', event, :class => "btn btn-mini" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
