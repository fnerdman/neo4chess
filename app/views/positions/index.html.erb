<legend>Listing positions</legend>
<% if @positions.empty? %>
There were no positions found.
<% else %>
  <div class="span7 offset1">
    <table class="table table-hover well">
      <thead>
        <tr>
          <th>FEN</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @positions.each do |position| %>
          <tr>
            <td><%= position.fen %></td>
            <td><%= link_to 'Show', position, :class => "btn btn-mini"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>